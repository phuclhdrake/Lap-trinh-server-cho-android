<%- include('../inc/top', {all_title: 'List Users'}) %>
  <!DOCTYPE html>
  <html lang="en">

  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="stylesheets/bootstrap-5.2.3-dist/css/bootstrap.min.css">

  </head>

  <body>
    <!-- ID, Fullname, Username, Email, Group, Status -->
    <div class="container">


      <div>
        <nav class="navbar bg-body-tertiary">
          <div class="container-fluid border border-danger " style="background-color: violet; padding: 1%;">
            <a class="navbar-brand">User</a>

            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="btn btn-primary" href="/users/addUsers" style="margin: 1%;"> AddUser</a>
              </li>
            </ul>

            <form class="d-flex" role="search">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success" style="background-color: rgba(238, 234, 234, 0.703);"
                type="submit">Search</button>
            </form>
          </div>
        </nav>
      </div>


      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Fullname</th>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col">Status</th>
          </tr>
        </thead>
        <tbody>

          <% items.forEach((item)=> { %>
            <tr>
              <td scope="row">
                <%= item.id %>
              </td>
              <td>
                <%= item.fname %>
              </td>
              <td>
                <%= item.uname %>
              </td>
              <td>
                <%= item.email %>
              </td>
              <td>
                <%= item.status %>
              </td>
            </tr>
            <% }) %>
            
        </tbody>
      </table>


      <div style="float: right;">
        <nav aria-label="...">
          <ul class="pagination">
            <li class="page-item">
              <a class="page-link" href="#">Previous</a>
            </li>
            <li class="page-item">
              <a class="page-link" href="#">1</a>
            </li>
            <li class="page-item active" aria-current="page">
              <a class="page-link" href="#">2</a>
            </li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
              <a class="page-link" href="#">Next</a>
            </li>
          </ul>
        </nav>
      </div>
    </div>

    <script src="stylesheets/bootstrap-5.2.3-dist/js/bootstrap.bundle.min.js"></script>
  </body>

  </html>

  <%- include('../inc/bottom') %>